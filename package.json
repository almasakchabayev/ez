{
  "name": "ez",
  "version": "0.1.0",
  "description": "Falcor + Rx + React connector library",
  "main": "lib/index.js",
  "scripts": {
    "build:lib": "babel src --out-dir lib",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.js dist/ez.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/ez.min.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min && node ./prepublish",
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run build",
    "test": "mocha --compilers js:babel-register --recursive --require ./test/setup.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almasakchabayev/ez.git"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "keywords": [
    "react",
    "reactjs",
    "falcor",
    "rx",
    "rxjs"
  ],
  "author": "Almas Akchabayev <almas.akchabayev@gmail.com> (https://github.com/almasakchabayev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/almasakchabayev/ez/issues"
  },
  "homepage": "https://github.com/almasakchabayev/ez",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "^6.3.13",
    "cross-env": "^1.0.7",
    "es3ify": "^0.2.0",
    "eslint": "^2.1.0",
    "eslint-config-airbnb": "^5.0.1",
    "eslint-plugin-react": "^4.0.0",
    "expect": "^1.14.0",
    "falcor": "Netflix/falcor",
    "glob": "^7.0.0",
    "isparta": "4.0.0",
    "istanbul": "^0.4.2",
    "jsdom": "~8.0.4",
    "mocha": "^2.3.4",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.0",
    "react-dom": "^0.14.0",
    "rimraf": "^2.3.4",
    "rxjs": "^5.0.0-beta.2",
    "webpack": "^1.11.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "hoist-non-react-statics": "^1.0.5",
    "invariant": "^2.2.0",
    "lodash": "^4.5.0"
  },
  "peerDependencies": {
    "falcor": "Netflix/falcor",
    "react": "^0.14.7",
    "rxjs": "^5.0.0-beta.2"
  }
}
